<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.plantapp.View.SecondFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="313dp"
        android:layout_height="314dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="116dp"
        android:contentDescription="imagen de planta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nombre_articulo"
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_sans_black"
        android:text="@string/nombre_articulo"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/btn_atras"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="atras"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="173dp"
        android:layout_height="25dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_articulo" />

</androidx.constraintlayout.widget.ConstraintLayout>