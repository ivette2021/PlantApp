<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/Secondary"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item"
                    android:layout_width="150dp"
                    android:layout_height="178dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />


            </LinearLayout>
            <!--layout_gravity ayuda a centrar dentro un layout global en este caso-->

            <TextView
                android:id="@+id/tv_nombre_planta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="TextView"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_plantado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/plantado"
                android:textColor="@color/PrimaryVariant"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_fecha_plantado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/fechaPlantacion"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ultimo_riego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Ultimo Riego"
                android:textColor="@color/PrimaryVariant"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_fecha_ultimo_riego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/fechaUltimoRiego"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dias_faltantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Regar MaÃ±ana"
                android:textColor="@color/Background"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>